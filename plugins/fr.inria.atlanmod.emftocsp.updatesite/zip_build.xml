	<!-- generate the zip file containing EMFToCSP update site -->
	<target name="compress" >
		<delete file ="zip/fr.inria.atlanmod.emftocsp.updatesite.zip"/>
		<mkdir dir="temp"/>
		<copy todir="temp"
				failonerror="true" overwrite="true">
			<fileset dir=".">
			    <include name="**"/>
				<exclude name=".svn/**"/>
				<exclude name="zip/**"/>
				<exclude name=".project"/>
			</fileset>
		</copy>
		<zip destfile="zip/fr.inria.atlanmod.emftocsp.updatesite.zip"
			basedir="temp" includes="**" filesonly="false" whenempty="skip" update="false"/>
		<delete dir="temp"/>
	</target>
</project>
