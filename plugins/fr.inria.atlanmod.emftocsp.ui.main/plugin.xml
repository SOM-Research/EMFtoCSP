<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="fr.inria.atlanmod.emftocsp.ui.categories.validation"
            id="fr.inria.atlanmod.emftocsp.ui.commands.validate"
            name="%command.name">
      </command>
      <category
            description="%category.description"
            id="fr.inria.atlanmod.emftocsp.ui.categories.validation"
            name="%category.name">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="fr.inria.atlanmod.emftocsp.ui.commands.validate"
               label="%command.label"
               style="push"
               tooltip="%command.tooltip">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fr.inria.atlanmod.emftocsp.ui.main.commands.WizardHandler"
            commandId="fr.inria.atlanmod.emftocsp.ui.commands.validate">
         <activeWhen>
            <iterate
                  ifEmpty="false">
               <adapt
                     type="org.eclipse.core.resources.IResource">
                  <or>
                     <test
                           property="org.eclipse.core.resources.name"
                           value="*.xmi">
                     </test>
                     <test
                           property="org.eclipse.core.resources.name"
                           value="*.ecore">
                     </test>
                     <test
                           property="org.eclipse.core.resources.name"
                           value="*.uml">
                     </test>
                  </or>
               </adapt>
            </iterate>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="fr.inria.atlanmod.emftocsp.ui.main.preferences.PreferencePage"
            id="fr.inria.atlanmod.emftocsp.ui.preferences.PreferencePage"
            name="%page.name">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="fr.inria.atlanmod.emftocsp.ui.commands.validate"
            icon="resources/icons/Checked.png">
      </image>
   </extension>


</plugin>
